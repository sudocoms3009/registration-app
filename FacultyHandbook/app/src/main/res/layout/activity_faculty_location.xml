                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:text="Faculty of Science"
                    android:textSize="17sp"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50dp"/>

                <ImageView
                    android:id="@+id/dropdown_science"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:src="@drawable/down"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
                <ImageView
                    android:id="@+id/up_science"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="match_parent"
                    android:src="@drawable/up"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>



            </LinearLayout>


            </LinearLayout>

        <ScrollView
            android:id="@+id/science_pages"
            android:layout_width="match_parent"
            android:layout_height="2001dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/page_1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/page_2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/page_3"/>
            <ImageView
