                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/page_2"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/page_3"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
