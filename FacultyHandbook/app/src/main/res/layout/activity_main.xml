<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginBottom="20dp">

<LinearLayout
    android:id="@+id/taskbar"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_rectangle_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

    <ImageView
        android:id="@+id/dropdown"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="40dp"
        android:src="@drawable/options"
        android:padding="4dp"/>

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="42dp"
        android:backgroundTint="#fff"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/get_search"
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="40dp"
        android:src="@drawable/search"
        android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/wits"
                android:background="@drawable/background"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Handbook"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="University Of Witwatersrand"
            android:textColor="#fff"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

        </TextView>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Faculties"
        android:textSize="26sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/taskbar"
        app:layout_constraintLeft_toLeftOf="parent"
        />



    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/science"
            android:layout_width="120dp"
            android:layout_height="160dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="12dp"
            android:backgroundTint="#00858e">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="2sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Faculty of Science"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="-12dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/science"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/commerce"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toRightOf="@id/science"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#d83b70">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty of Commerce"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/clm"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/engineering"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toRightOf="@id/commerce"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#098c58">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty of Engineering"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/engineering"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/health"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toRightOf="@id/engineering"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#792ba2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty of Health"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/health"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/humanity"
        android:layout_width="120dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintLeft_toRightOf="@id/health"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:backgroundTint="#df1f38">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty of Humanities"
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="-12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/humanities"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/generalTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/scroll"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Previous Years"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/years"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/generalTitle"
        app:layout_constraintLeft_toLeftOf="parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/year2019"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="60dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#a1a1a1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2019"
                android:textSize="22sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"/>



        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/year2018"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="#a1a1a1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2018"
                    android:textSize="22sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/years"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/year2017"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="#a1a1a1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2017"
                        android:textSize="22sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>



                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/year2016"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="60dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="#a1a1a1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2016"
                        android:textSize="22sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </LinearLayout>




            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>